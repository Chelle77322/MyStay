  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    
      
    "start:prod": "node server.js",
    
      
    "start:dev": "concurrently \"nodemon --ignore 'mystay/*'\" \"npm run ratemystay\"",
    
      
    "mystay": "cd mystay && npm run start",
    
      
    "build": "cd ratemystay && npm run build",
    
      
    "install-mystay": "cd ratemystay && npm install",
    
      
